  flex: 1;
  min-width: 250px;
  padding-right: 2rem;
}

.customer-review-left h2 {
  font-size: 2rem;
  font-weight: 700;
  color: #5c2c06;
  line-height: 1.4;
}

.customer-review-slider {
  flex: 2;
  max-width: 800px;
  position: relative;
}

.review-slide {
  background-color: #f8f0df;
  border-radius: 0.5rem;
  padding: 2rem;
  min-height: 250px;
  margin: 0 1rem;
  position: relative;
}

.quote-icon {
  width: 40px;
  height: auto;
  margin-bottom: 1rem;
}

.review-stars {
  font-size: 1.2rem;
  color: #f2b01e;
  margin-bottom: 1rem;
}

.review-message {
