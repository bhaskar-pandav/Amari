  width: 40px;
  height: 40px;
  border-radius: 50%;
  object-fit: cover;
  margin-right: 1rem;
}

.reviewer-details strong {
  display: block;
  color: #000;
  font-size: 1rem;
}

.reviewer-details span {
  color: #444;
  font-size: 0.9rem;
}

/* Arrows styled like your design */
.slick-arrow {
  position: absolute;
  right: -45px;
  background-color: #5c2c06;
  color: #fff;
  border: none;
  border-radius: 50%;
  width: 28px;
  height: 28px;
  font-size: 16px;
  cursor: pointer;
  z-index: 10;
  display: flex !important;
  align-items: center;
  justify-content: center;
  transition: background 0.3s ease;
}

.slick-prev {
  top: 20%;
}

.slick-next {
  bottom: 20%;
}

.slick-arrow:hover {
  background-color: #3a1c04;
}

/* Responsive Fix */
@media screen and (max-width: 768px) {
  .customer-review-wrapper {
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .customer-review-left {
    padding-right: 0;
    margin-bottom: 2rem;
  }

  .customer-review-slider {
    max-width: 100%;
  }

  .slick-arrow {
    display: none !important;
  }
}


{% endstylesheet %}

<div class="customer-review-wrapper">
  <div class="customer-review-left">
    <h2>{{ section.settings.title }}</h2>
  </div>
  <div class="customer-review-slider">
   
    {% for block in section.blocks %}
      <div class="review-slide">
        {% if block.settings.quote_image != blank %}
          <img src="{{ block.settings.quote_image | image_url }}" class="quote-icon" alt="Quote Icon" loading="lazy" width="" height="">
        {% endif %}

        <div class="review-stars">
          {% for i in (1..block.settings.star_rating) %}
            ★
          {% endfor %}
        </div>

        <p class="review-message">
          {{ block.settings.review_message }}
        </p>

        <div class="reviewer-info">
          {% if block.settings.profile_image != blank %}
            <img src="{{ block.settings.profile_image | image_url }}" alt="{{ block.settings.reviewer_name }}" loading="lazy" width="" height="">
          {% endif %}
          <div class="reviewer-details">
            <strong>{{ block.settings.reviewer_name }}</strong>
            <span>{{ block.settings.reviewer_city }}</span>
          </div>
        </div>
      </div>
    {% endfor %}
    </div>
  </div>

 <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js" defer></script>

  <!-- Slick JS -->
  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js" defer></script>
  
<script>
  document.addEventListener("DOMContentLoaded", function () {
    setTimeout(function () {
      $('.customer-review-slider').not('.slick-initialized').slick({
        arrows: true,
        dots: false,
        infinite: true,
        speed: 600,
        slidesToShow: 1,
        slidesToScroll: 1,
        prevArrow: '<button type="button" class="slick-prev">↑</button>',
        nextArrow: '<button type="button" class="slick-next">↓</button>',
      });
    }, 300); // Delay to ensure DOM & jQuery ready
  });
</script>


{%  schema  %}  
{
  "name": "Customer Review",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "What Our Customers Are Saying"
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "quote_image",
          "label": "Quote Icon Image"
        },
        {
          "type": "range",
          "id": "star_rating",
          "label": "Star Rating",
          "min": 1,
          "max": 5,
          "step": 1,
          "default": 5
        },
        {
          "type": "textarea",
          "id": "review_message",
          "label": "Review Message",
          "default": "I love this store!"
        },
        {
          "type": "image_picker",
          "id": "profile_image",
          "label": "Reviewer Profile Image"
        },
        {
          "type": "text",
          "id": "reviewer_name",
          "label": "Reviewer Name",
          "default": "John Doe"
        },
        {
          "type": "text",
          "id": "reviewer_city",
          "label": "Reviewer City",
          "default": "New York"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Customer Review",
      "blocks": [
        {
          "type": "review"
        }
      ]
    }
  ]
}
{% endschema %}  