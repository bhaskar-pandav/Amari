<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Custom Card Slider</title>

  <!-- Slick CSS -->
  <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
  <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css"/>

  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f9f9f9;
      padding: 40px;
    }

    .custom-card-list {
      margin: 0 auto;
      width: 90%;
    }

    .custom-card-item {
      padding: 15px;
    }

    .custom-card-content {
      background: #ffffff;
      border-radius: 12px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      padding: 20px;
      text-align: center;
    }

    .custom-card-content h3 {
      margin-top: 0;
      font-size: 1.2rem;
    }

    .custom-card-content p {
      font-size: 0.95rem;
      color: #555;
    }

    /* Adjust slick dots and arrows if needed */
    .slick-dots li button:before {
      color: #000;
    }

    .slick-prev:before, .slick-next:before {
      color: #000;
    }
  </style>
</head>
<body>

<ul class="custom-card-list">
  <h2></h2>
  {% for block in section.blocks %}
    <li class="custom-card-item">
      <div class="custom-card-content">
        <h3>{{ block.settings.title }}</h3>
        <p>{{ block.settings.description }}</p>
      </div>
    </li>
  {% endfor %}
</ul>

<ul class="custom-card-list">
  {% for block in section.blocks %}
    <li class="custom-card-item">
      <div class="custom-card-content">
        <h3>{{ block.settings.title }}</h3>
        <p>{{ block.settings.description }}</p>
      </div>
    </li>
  {% endfor %}
</ul>

{% schema %}
  {
    "name": "Custom Card Slider",
    "tag": "section",
    "settings": [],
    "blocks": [
      {
        "type": "card",
        "name": "Card",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Card Title",
            "default": "Card Title"
          },
          {
            "type": "textarea",
            "id": "description",
            "label": "Card Description",
            "default": "This is a card description."
          }
        ]
      }
    ],
    "max_blocks": 20,
    "presets": [
      {
        "name": "Custom Card Slider",
        "category": "Custom"
      }
    ]
  }
  {% endschema %}

  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js" defer></script>

  <!-- Slick JS -->
  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js" defer></script>

  <!-- Initialize Slick -->
  <script>
    $(document).ready(function(){
      $('.custom-card-list').slick({
        infinite: true,
        slidesToShow: 3,
        slidesToScroll: 1,
        arrows: true,
        dots: true,
        responsive: [
          {
            breakpoint: 1024,
            settings: {
              slidesToShow: 2
            }
          },
          {
            breakpoint: 600,
            settings: {
              slidesToShow: 1
            }
          }
        ]
      });
    });



    
$('.multiple-items').slick({
  infinite: true,
  slidesToShow: 3,
  slidesToScroll: 3
});
  </script>

</body>
</html>
