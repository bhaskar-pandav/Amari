{{ 'custom-img-with-txt.css' | asset_url |  stylesheet_tag }}
<section class="exclusive-products">
  <div class="exclusive-products__container">
   
    <div class="exclusive-products__left">
        <div class="svg-img">
            {% if section.settings.svg_image %}
                <img src="{{ section.settings.svg_image | img_url: 'medium' }}" alt="{{ section.settings.svg_image.alt | escape }}" width="" height="">
              {% endif %} 
              </div>
      {% if section.settings.main_image %}
        <img src="{{ section.settings.main_image | img_url: 'master' }}" alt="Exclusive Products" class="exclusive-products__main-image" loading="lazy" width="" height="">
      {% endif %}
    </div>
        
    <div class="exclusive-products__right">
      {% if section.settings.heading %}
        <h2 class="exclusive-products__heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.paragraph %}
        <p class="exclusive-products__paragraph">{{ section.settings.paragraph }}</p>
      {% endif %}
      <div class="exclusive-products__icons">
        {% for block in section.blocks %}
          <div class="exclusive-products__icon-item">
            {% if block.settings.icon_image %}
              <img src="{{ block.settings.icon_image | img_url: '100x' }}" alt="Icon {{ forloop.index }}" class="exclusive-products__icon-image" loading="lazy" width="" height="">
            {% endif %}
            {% if block.settings.icon_text %}
              <p class="exclusive-products__icon-text">{{ block.settings.icon_text }}</p>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "custom-img-with-txt",
  "settings": [
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Left Image"
    },
    {
      "type": "image_picker",
      "id": "svg_image",
      "label": "Upload Svg Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading Text"
    },
    {
      "type": "textarea",
      "id": "paragraph",
      "label": "Paragraph Text"
    }
  ],
  "blocks": [
    {
      "type": "icon",
      "name": "Icon Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon_image",
          "label": "Icon Image"
        },
        {
          "type": "text",
          "id": "icon_text",
          "label": "Icon Text Below"
        }
      ]
    }
  ],
  "max_blocks": 5,
  "presets": [
    {
      "name": "Exclusive Products Section",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
